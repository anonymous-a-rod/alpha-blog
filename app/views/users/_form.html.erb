<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username, class: 'form-control', placeholder: 'Enter a username' %>
  </div>
  <br>
  <div>
    <%= form.label :email, style: "display: block", class: '' %>
    <%= form.email_field :email, placeholder: 'Enter your email address', class:'form-control' %>
  </div>
  <br>
  <div>
    <%= form.label :password, style: "display: block", class: '' %>
    <%= form.password_field :password, placeholder: 'Choose a password', class:'form-control' %>
  </div>
  <br>
  <div>
    <%= form.submit class: 'btn btn-success'%>
  </div>
<% end %>